{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "single"],
    "arrow-parens": ["error", "always"],
    "max-len": ["error", {
      "code": 120
    }],
    "semi": "error",
    "comma-dangle": "error"
  }
}